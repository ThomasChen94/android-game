<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <Button
                android:gravity="center|left"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="RENAME GAME"
                android:background="@drawable/button_border"
                android:drawableLeft="@drawable/rename_icon"
                android:drawableRight="@drawable/forward_icon"
                android:onClick="renameGame"/>
            <Button
                android:gravity="center|left"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="DELETE GAME"
                android:background="@drawable/button_border"
                android:drawableLeft="@drawable/deletegame_icon"
                android:drawableRight="@drawable/forward_icon"
                android:onClick="deleteGame"/>
            <Switch
                android:gravity="center|left"
                android:background="@drawable/button_border"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/position_switch"
                android:drawableLeft="@drawable/movable_icon"
                android:text="POSITION"/>
            <Switch
                android:gravity="center|left"
                android:background="@drawable/button_border"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/page_switch"
                android:drawableLeft="@drawable/hsv_page_icon"
                android:text="USER NAME"/>
            <Switch
                android:gravity="center|left"
                android:background="@drawable/button_border"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/unique_page_switch"
                android:drawableLeft="@drawable/unique_icon"
                android:text="UNIQUE NAME"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>